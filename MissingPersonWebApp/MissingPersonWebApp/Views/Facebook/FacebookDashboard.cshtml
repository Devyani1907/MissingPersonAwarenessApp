    function EditFacebookAccount(id) {
        debugger;
        if (id > 0) {

            window.location.href = window.location.origin + "/Facebook/UpdateFacebookAccount?id=" + id;

        }

    }

    function DeleteFacebookAccount(id) {
        debugger;
        if (id > 0) {
            $.ajax({
                url: window.location.origin + "/Facebook/DeleteFacebookAccount?id=" + id,
                success: function (result) {
                    debugger;
                    if (result.data == true) {
                        alert("Deleted successfully");

                        var table = $('#missingpeopletable').DataTable();

                        table.destroy();
                        LoadTable(window.location.origin);
                    }
                }
            });
        }
    }

    function LoadTable(url) {

        var table = $('#facebookaccounttable').DataTable({
            "bProcessing": true,
            "serverSide": true,
            ordering: true,
            searching: true,
            "ajax": {
                "url": url + "/Facebook/GetFacebookAccounts",
                "type": "GET"
            },
            "beforeSend": function (xhr) {
                xhr.setRequestHeader("XSRF-TOKEN",
                    $('input:hidden[name="__RequestVerificationToken"]').val());
            },
            "columns": [
                {
                    "data": null,
                    "render": function (data, type, full, meta) {
                        return (meta.row + 1);
                    }
                },
                { "data": "appId" },
                { "data": "appName" },
                { "data": "appSecret" },
                {
                    "data": null,
                    render: function (data, type, row) {
                        debugger;
                        if (data.enable == true)
                            return '<span style="color: #e70e0e;">Yes</span>';
                        else
                            return '<span>No</span>';
                    }
                },
                {
                    "data": null,
                    render: function (data, type, row) {
